<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_MEDIA_IMAGES" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="NewsFest"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.C36B"
        tools:replace="android:fullBackupContent"
        tools:targetApi="31">
        <activity
            android:name=".view.pages.Admin.CreateNewsScreen"
            android:exported="false"
            android:label="@string/title_activity_create_news_screen"
            android:theme="@style/Theme.C36B" />
        <activity
            android:name=".view.pages.NewsScreen"
            android:exported="false"
            android:label="@string/title_activity_news_screen"
            android:theme="@style/Theme.C36B" />
        <activity
            android:name=".view.pages.Admin.ProfileScreen"
            android:exported="false"
            android:label="@string/title_activity_profile_screen"
            android:theme="@style/Theme.C36B" />
        <activity
            android:name=".view.pages.Admin.HomeScreen"
            android:exported="false"
            android:label="@string/title_activity_home_screen"
            android:theme="@style/Theme.C36B" />
        <activity
            android:name=".view.AdminNavigationActivity"
            android:exported="false"
            android:label="@string/title_activity_admin_navigation"
            android:theme="@style/Theme.C36B" />
        <activity
            android:name=".view.NavigationActivity"
            android:exported="true"
            android:label="@string/title_activity_navigation"
            android:theme="@style/Theme.C36B" />
        <activity
            android:name=".view.SplashActivity"
            android:exported="true"
            android:label="NewsFest"
            android:theme="@style/Theme.C36B">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.RegistrationActivity"
            android:exported="true"
            android:label="@string/title_activity_registration"
            android:theme="@style/Theme.C36B" />
        <activity
            android:name=".view.LoginActivity"
            android:exported="true"
            android:label="@string/title_activity_login"
            android:theme="@style/Theme.C36B" />
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.C36B">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>